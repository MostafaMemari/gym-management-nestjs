generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WalletStatus {
  NONE
  LOW_BALANCE
  CRITICAL_BALANCE
  DEPLETED
}

model Role {
  id          Int          @id() @default(autoincrement())
  name        String       @unique() @db.VarChar()
  permissions Permission[]
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
}

model Permission {
  id        Int      @id() @default(autoincrement())
  method    String   @db.VarChar()
  endpoint  String   @db.VarChar()
  roles     Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([method, endpoint])
}

model User {
  id                 Int       @id() @default(autoincrement()) @db.Integer()
  username           String    @unique @db.VarChar(100)
  roles              Role[]
  mobile             String?
  password           String?
  lastPasswordChange DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @default(now())
  wallet             Wallet?   @relation(fields: [walletId], references: [id])
  walletId           Int?      @unique()
}

model Wallet {
  id                 Int          @id() @default(autoincrement()) @db.Integer()
  userId             Int          @unique
  user               User?        @relation
  balance            Int          @default(100000)
  isBlocked          Boolean      @default(false)
  lastWithdrawalDate DateTime     @default(now())
  status             WalletStatus @default(NONE)
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @default(now())
}

model WalletDeduction {
  id               Int      @id() @default(autoincrement()) @db.Integer()
  userId           Int      @db.Integer()
  walletId         Int      @db.Integer()
  deductionAmount  Int      @db.Integer()
  remainingBalance Int      @db.Integer()
  createdAt        DateTime @default(now())
}

model ManualCredit {
  id         Int      @id() @default(autoincrement()) @db.Integer()
  walletId   Int      @db.Integer()
  userId     Int      @db.Integer()
  creditedBy Int      @db.Integer()
  amount     Int      @db.Integer()
  reason     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}
